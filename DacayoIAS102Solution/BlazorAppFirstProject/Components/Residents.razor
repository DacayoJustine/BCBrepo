@inject NavigationManager NavigationManager


<div class="table-responsive tbl-wfx mt-1 kot-table">
    @if (ResidentsDetail is not null)
    {
        <div class="container" style="margin-top: 30px;">
            <div class="row">
                <div class="col">
                    <h1 class="text-center">Residents List</h1>
                </div>
            </div>
        </div>
        <div class="container" style="margin-top: 25px;">
            <div class="row">
                <div class="col-lg-10 d-lg-flex align-items-lg-center">
                    <div class="input-group"><span class="input-group-text">Search</span><input class="form-control" type="text"><button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button></div>
                </div>
                <div class="col">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle" aria-expanded="false" data-bs-toggle="dropdown" type="button">Purok</button>
                        <div class="dropdown-menu"><a class="dropdown-item" href="#">Purok 1A</a><a class="dropdown-item" href="#">Purok 1B</a><a class="dropdown-item" href="#">Purok 2</a><a class="dropdown-item" href="#">Purok 3</a><a class="dropdown-item" href="#">Purok 4</a><a class="dropdown-item" href="#">Purok 5</a><a class="dropdown-item" href="#">Purok 6</a><a class="dropdown-item" href="#">Purok 7</a></div>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center" style="margin-top: 24px;">
                <div class="col-xl-10 col-xxl-9">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">FirstName</th>
                                            <th scope="col">MiddleName</th>
                                            <th scope="col">LastName</th>
                                            <th scope="col">Suffix</th>
                                            <th scope="col">BirthDate</th>
                                            <th scope="col">Age</th>
                                            <th scope="col">Gender</th>
                                            <th scope="col">Purok</th>
                                            <th scope="col">StatusType</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in ResidentsDetail)
                                        {
                                            <tr>
                                                <th scope="row">@item.Id</th>
                                                <td>@item.FirstName</td>
                                                <td>@item.MiddleName</td>
                                                <td>@item.LastName</td>
                                                <td>@item.Suffix</td>
                                                <td>@item.BirthDate</td>
                                                <td>@item.civilStatus</td>
                                                <td>@item.Purok</td>
                                                <td>@item.StatusType</td>
                                                <td class="text-center">
		                                        <Button Color="ButtonColor.Info" @onclick="@(() => ViewItem(item.Id))"><Icon Name="IconName.Eye" />View</Button>
                                                </td>
                                                <td class="text-center">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-pencil-square fs-5 text-primary">
                                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
                                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
                                                    </svg>
                                                </td>
                                                <td class="text-center">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-trash-fill fs-5 text-primary" style="/*color: var(--bs-red) !important;*/">
                                                        <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"></path>
                                                    </svg>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer">
                            <nav>
                                <ul class="pagination pagination-sm mb-0 justify-content-center">
                                    <li class="page-item"><a class="page-link" aria-label="Previous" href="#"><span aria-hidden="true">«</span></a></li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" aria-label="Next" href="#"><span aria-hidden="true">»</span></a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


@code {

    [Inject] private ResidentsManager _residentsManager { get; set; }
    [Parameter] public IEnumerable<ResidentsModel> ResidentsDetail { get; set; }
    [Parameter] public EventCallback<ResidentsModel> OnResidentsSelected { get; set; }

    private ResidentsModel _residents { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadResidentsDetail();
    }
    private async Task LoadResidentsDetail()
    {
        ResidentsDetail = await _residentsManager.GetAllResidents();
    }
    private void ViewItem(int id)
    {
        var target = "ResidentsView";
        NavigationManager.NavigateTo($"{target}/{id}");
    }




}
